<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forum.forum.module.mapper.PostMapper">

    <insert id="createPost" parameterType="com.forum.forum.module.entity.Post">
        insert into posts (
        <if test="authorId != null">author_id,</if>
        <if test="title != null">title,</if>
        <if test="contentMd != null">content_md,</if>
        <if test="replyNum != null">reply_num,</if>
        <if test="likeNum != null">like_num,</if>
        <if test="seenNum != null">seen_num,</if>
        <if test="createTime != null">create_time,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="deleteTime != null">delete_time,</if>
        <if test="status != null">status,</if>
        is_deleted
        ) values (
        <if test="authorId != null">#{authorId},</if>
        <if test="title != null">#{title},</if>
        <if test="contentMd != null">#{contentMd},</if>
        <if test="replyNum != null">#{replyNum},</if>
        <if test="likeNum != null">#{likeNum},</if>
        <if test="seenNum != null">#{seenNum},</if>
        <if test="createTime != null">#{createTime},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="deleteTime != null">#{deleteTime},</if>
        <if test="status != null">#{status},</if>
        #{isDeleted}
        )
    </insert>

</mapper>
