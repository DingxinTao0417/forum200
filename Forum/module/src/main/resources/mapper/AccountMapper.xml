<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forum.forum.module.mapper.AccountMapper">

    <insert id="signUp" parameterType="com.forum.forum.module.entity.Account">
        insert into users (
        <if test="username != null and username != ''">username,</if>
        <if test="password != null and password != ''">password,</if>
        <if test="email != null and email != ''">email,</if>
        <if test="createTime != null and createTime != ''">create_time,</if>
        <if test="updateTime != null and updateTime != ''">update_time,</if>
        <if test="lastLoginTime != null and lastLoginTime != ''">last_login_time</if>
        ) values (
        <if test="username != null and username != ''">#{username},</if>
        <if test="password != null and password != ''">#{password},</if>
        <if test="email != null and email != ''">#{email},</if>
        <if test="createTime != null and createTime != ''">#{createTime},</if>
        <if test="updateTime != null and updateTime != ''">#{updateTime},</if>
        <if test="lastLoginTime != null and lastLoginTime != ''">#{lastLoginTime}</if>
        )
    </insert>
</mapper>